	public List<String> getPortSpecs() {
		String s = portSpecsText.getText().trim();
		if (s.length() == 0)
			return null;
		List<String> specList = new ArrayList<String>();
		String[] specs = s.split("\\s+");
		for (String spec : specs) {
			spec = spec.trim();
			if (spec.length() > 0)
				specList.add(spec);
		}
		return specList;
	}

