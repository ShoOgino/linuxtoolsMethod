		@Override
		public String toString() {
			StringBuffer buffer = new StringBuffer();
			buffer.append(containerPort + CONTAINER_TYPE_SEPARATOR + portType
					+ SEPARATOR + (hostAddress != null ? hostAddress : "")
					+ SEPARATOR + hostPort
					+ SEPARATOR + selected);
