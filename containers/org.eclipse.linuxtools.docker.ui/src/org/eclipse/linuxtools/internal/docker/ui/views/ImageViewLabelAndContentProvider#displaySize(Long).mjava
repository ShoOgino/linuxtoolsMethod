	private String displaySize(Long size) {
		if (size <= 0)
			return "0";
		final String[] units = new String[] { "B", "kB", "MB", "GB", "TB" };
		int digitGroups = (int) (Math.log10(size) / Math.log10(1000));
		return new DecimalFormat("#,##0.#").format(size
				/ Math.pow(1000, digitGroups))
				+ " " + units[digitGroups];
	}

