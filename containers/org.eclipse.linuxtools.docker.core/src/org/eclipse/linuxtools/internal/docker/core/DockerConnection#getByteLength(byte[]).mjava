	/*
	 * Get the number of non-zero bytes from the beginning of the byte array.
	 */
	private static int getByteLength(byte[] buff) {
		int n;
		for (n = 0; n < buff.length; n++) {
			if (buff[n] == 0) {
				break;
			}
		}
		if ((n == buff.length - 1) && buff[buff.length - 1] != 0) {
			return buff.length;
		}
		return n;
	}

