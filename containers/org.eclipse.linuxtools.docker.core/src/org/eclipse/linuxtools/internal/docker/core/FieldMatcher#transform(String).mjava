	private String transform(String rule) {
		StringBuffer buffer = new StringBuffer();
		for (int i = 0; i < rule.length(); ++i) {
			char ch = rule.charAt(i);
			if (Character.isLetterOrDigit(ch))
				buffer.append(ch);
			else if (ch == '*') {
				buffer.append(".*?");
			} else {
				buffer.append('\\');
				buffer.append(ch);
			}
		}
		return buffer.toString();
	}

