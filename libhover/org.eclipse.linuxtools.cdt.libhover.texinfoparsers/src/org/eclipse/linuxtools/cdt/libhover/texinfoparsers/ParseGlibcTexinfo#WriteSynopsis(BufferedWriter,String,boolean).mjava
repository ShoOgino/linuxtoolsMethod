//                        WriteString(os, spaces + aa);
//                        aa = "";
//                    }
//                    aa = aa + " " + tt[pp];
//                }
            }
        }
        if (aa.length() > 0) WriteString(os, "        " + aa);
        WriteString(os, spaces + "</synopsis>");
