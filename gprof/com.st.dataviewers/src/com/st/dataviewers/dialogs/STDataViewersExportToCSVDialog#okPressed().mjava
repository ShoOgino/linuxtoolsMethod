	@Override
	protected void okPressed() {
		File f = new File(outputFile.getText());
		if (f.exists()) {
			MessageDialog dialog = 
				new MessageDialog(
						this.getShell(),
						"Warning: file already exists",
						null,
						"File \"" +
							f.getAbsolutePath() +
							"\" already exists.\n" +
							"Overwrite it anyway?",
						MessageDialog.WARNING, 
						new String[] {"OK", "Cancel"}, 1
						);
			if (dialog.open() > 0) {
				return;
			}
		}
		
		if (isDirty()) {
			saveExporterSettings();
		} 
		super.okPressed();
	}

