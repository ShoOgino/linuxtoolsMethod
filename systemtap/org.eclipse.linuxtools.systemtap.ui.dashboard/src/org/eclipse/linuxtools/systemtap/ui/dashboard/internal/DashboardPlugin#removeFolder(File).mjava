	private void removeFolder(File folder) {
		if (folder != null) {
			File[] files = folder.listFiles();
			if (files != null) {
				for (File file : folder.listFiles()) {
					if (file.isDirectory()) {
						removeFolder(file);
					} else {
						file.delete();
					}
				}
			}
			folder.delete();
		}
	}

