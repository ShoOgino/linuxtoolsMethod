    /* Stops the process from running and stops the <code>StreamGobblers</code> from monitoring
     * the dead process.
     */
    @Override
    public synchronized void stop() {
        if(!stopped) {
            if(null != errorGobbler) {
                errorGobbler.stop();
            }
            if(null != inputGobbler) {
                inputGobbler.stop();
            }
            if (channel != null) {
                channel.disconnect();
            }
            stopped = true;
            notifyAll();
        }
    }

