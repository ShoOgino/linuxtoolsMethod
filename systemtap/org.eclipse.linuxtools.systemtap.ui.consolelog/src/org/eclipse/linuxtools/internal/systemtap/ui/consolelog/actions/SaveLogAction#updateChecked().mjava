    public void updateChecked() {
        if (isLogging()) {
            setToolTipText(MessageFormat.format(
                    Localization.getString("action.saveLog.name2"), //$NON-NLS-1$
                    logFileName));
            setChecked(true);
        } else {
            setToolTipText(Localization.getString("action.saveLog.name")); //$NON-NLS-1$
            setChecked(false);
        }
    }

