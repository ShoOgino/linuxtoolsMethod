	public void handleUpdateEvent() {
		if(null == adapter) return;

		this.getDisplay().syncExec(new Runnable() {
			@SuppressWarnings("unchecked")
			public void run() {
				Object[][] data;
				elementList[0].clear();
				data = adapter.getData();
	
				Number n;
				sum = 0;
				for(int i=0; i<data.length; i++) {
					n = NumberType.obj2num(data[i][1]);
					elementList[0].add(n);
					sum += n.doubleValue();
				}
			}
		});
		this.repaint();
	}

