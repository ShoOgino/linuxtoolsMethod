    public boolean isCPPToken() {
        switch (type) {
        case tCOLONCOLON:
        case t_class:
        case t_namespace:
        case t_using:
        case t_template:
        case t_public:
        case t_protected:
        case t_private:
        case t_operator:
        case t_virtual:
        case t_inline:
        case t_friend:
        case t_mutable:
        case t_new:
        case t_delete:
        case t_reinterpret_cast:
        case t_dynamic_cast:
        case t_static_cast:
        case t_finally:
            return true;
        default:
            return false;
        }
    }

