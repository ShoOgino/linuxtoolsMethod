    public static boolean isAssignmentOperator(int type) {
        switch (type) {
            case tASSIGN:
            case tPLUSASSIGN:
            case tMINUSASSIGN:
            case tSTARASSIGN:
            case tDIVASSIGN:
            case tAMPERASSIGN:
            case tBITORASSIGN:
            case tXORASSIGN:
            case tMODASSIGN:
            case tSHIFTLASSIGN:
            case tSHIFTRASSIGN:
                return true;
            default:
                return false;
        }
    }

