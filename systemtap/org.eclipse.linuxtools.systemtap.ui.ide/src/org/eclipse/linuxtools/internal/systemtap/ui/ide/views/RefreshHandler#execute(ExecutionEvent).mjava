    @Override
    public Object execute(ExecutionEvent event) {
        if (active) {
            final IWorkbenchPart activePart = HandlerUtil.getActivePart(event);
            if (activePart instanceof BrowserView) {
                new Thread(new Runnable() {
                    @Override
                    public void run() {
                        ((BrowserView) activePart).refresh();
                    }
                }).start();
            }
        }
        return null;
    }

