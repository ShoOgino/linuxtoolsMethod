    public boolean isControlStmt() {
        switch (type) {
            case t_if:
            case t_else:
            case t_for:
            case t_do:
            case t_while:
            case t_switch:
            case t_try:
            case t_catch:
            case t_finally:
                return true;
            default:
                return false;
        }
    }

