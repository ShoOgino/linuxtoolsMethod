	/**
	 * Sets up an output to log to.
	 */
	public LoggingStreamDaemon() {
		output = new StringBuilder();
		try {
			outputFile = File.createTempFile(this.toString(), ".tmp"); //$NON-NLS-1$
			writer = new FileWriter(outputFile, true);
		} catch(IOException ioe) {
			outputFile = null;
		}
		saveLog = false;
	}

