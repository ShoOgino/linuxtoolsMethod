	/**
	 * Dispose is overriden in order to dispose of the listeners attached to this Composite on disposal.
	 */
	public void dispose() {
		scaleListener = null;

		if(null != canvas) canvas.dispose();
		canvas = null;
		
		if(null != zoomScale) zoomScale.dispose();
		zoomScale = null;
		
		if(null != label) label.dispose();
		label = null;
		super.dispose();
	}

