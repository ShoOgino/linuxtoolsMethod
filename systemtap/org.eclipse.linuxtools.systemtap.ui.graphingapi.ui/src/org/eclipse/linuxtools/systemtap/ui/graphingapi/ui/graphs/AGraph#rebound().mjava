	private synchronized void rebound() {
		getDisplay().syncExec(new Runnable() {
			boolean stop = false;
			public void run() {
				if(stop) return;
				try {
					setGlobalArea(getArea(maxItems));
					setLocalArea(getArea(viewableItems));
				} catch (Exception e) {
					stop = true;
				}
			}
		});
	}

