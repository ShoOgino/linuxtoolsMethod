    /**
     * Initial the test facility.
     */
    public void init() {
        
        if (!fIsInitialized) {

            IViewPart view;
            try {
                view = PlatformUI.getWorkbench()
                                 .getActiveWorkbenchWindow()
                                 .getActivePage()
                                 .showView(ControlView.ID); 
                
            } catch (PartInitException e) {
                throw new RuntimeException(e);
            }

            fControlView = (ControlView) view;

            delay(3000);
            fIsInitialized = true;
        }
    }

