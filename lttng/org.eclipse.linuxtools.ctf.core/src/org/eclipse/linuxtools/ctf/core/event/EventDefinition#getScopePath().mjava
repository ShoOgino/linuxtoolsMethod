    /**
     * @since 3.0
     */
    @Override
    public LexicalScope getScopePath() {
        String eventName = fDeclaration.getName();
        if (eventName == null) {
            return null;
        }
        LexicalScope myScope = LexicalScope.EVENT.getChild(eventName);
        if (myScope == null) {
            myScope = new LexicalScope(LexicalScope.EVENT, eventName);
        }
        return myScope;
    }

