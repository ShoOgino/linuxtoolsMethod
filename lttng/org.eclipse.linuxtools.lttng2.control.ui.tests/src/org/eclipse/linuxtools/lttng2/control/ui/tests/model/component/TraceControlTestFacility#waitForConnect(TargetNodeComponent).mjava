    /**
     * Waits for a connection to be connected
     */
    public void waitForConnect(TargetNodeComponent node) {
        for (int i = 1; i < 5000 && node.getTargetNodeState() == TargetNodeState.CONNECTING; i *= 2) {
            try {
                Thread.sleep(i);
            } catch (InterruptedException e) {
                Assert.fail();
            }
        }
    }

