    Integer findTraceItemIndex(ITmfTimeAnalysisEntry trace) {
        if (trace == null)
            return null;

        for (int i = 0; i < _items.length; i++) {
            Object item = _items[i];
            if (item instanceof TraceItem) {
                TraceItem ti = (TraceItem) item;
                if (ti._trace == trace) {
                    return i;
                }
            }
        }

        return null;
    }

