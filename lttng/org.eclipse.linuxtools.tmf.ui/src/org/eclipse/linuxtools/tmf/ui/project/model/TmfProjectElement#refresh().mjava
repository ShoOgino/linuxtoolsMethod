    @Override
    public void refresh() {
        if (!Display.getDefault().isDisposed()) {
            Display.getDefault().asyncExec(new Runnable() {
                @Override
                public void run() {
                    try {
                        IProject project = getResource();
                        project.touch(null);
                    } catch (CoreException e) {
                    }
                }
                
            });
        }
    }

