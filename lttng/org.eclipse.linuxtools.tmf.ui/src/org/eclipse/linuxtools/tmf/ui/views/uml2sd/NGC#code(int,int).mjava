    protected byte code(int x, int y) {
        byte c = 0;
        y_ = vscreen_bounds;
        x_ = vscreen_bounds;
        yx = view.getVisibleHeight() + vscreen_bounds;
        xx = view.getVisibleWidth() + vscreen_bounds;
        if (y > yx)
            c |= 0x01; // top
        else if (y < y_)
            c |= 0x02; // bottom
        if (x > xx)
            c |= 0x04; // right
        else if (x < x_)
            c |= 0x08; // left
        return c;
    }

