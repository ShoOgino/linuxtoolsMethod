    @Override
    public boolean isVisible(int x, int y, int width, int height) {
        if ((getLifeline() != null) && (getLifeline().isVisible(x, y, width, height))) {
            int ly = getY();
            int lh = getHeight();
            if (ly >= y && ly < y + height)
                return true;
            if (ly + lh > y && ly + lh <= y + height)
                return true;
            if ((ly < y) && (ly + lh > y + height))
                return true;
        }
        return false;
    }

