	boolean toggle(int idx) {
		boolean toggled = false;
		if (idx >= 0 && idx < _data._items.length) {
			Item item = (Item) _data._items[idx];
			if (item._hasChildren) {
				item._expanded = !item._expanded;
				_data.updateItems();
				adjustScrolls();
				redraw();
				toggled = true;
			}
		}
		return toggled;
	}

