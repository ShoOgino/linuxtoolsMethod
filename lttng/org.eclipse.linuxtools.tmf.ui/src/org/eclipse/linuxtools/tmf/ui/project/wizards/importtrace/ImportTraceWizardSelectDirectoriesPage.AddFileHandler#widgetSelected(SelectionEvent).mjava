        @Override
        public void widgetSelected(SelectionEvent e) {

            FileDialog dialog = new
                    FileDialog(Display.getCurrent().getActiveShell(), SWT.NONE);
            String fn = dialog.open();
            if (null != fn) {
                File f = new File(fn);
                if (f.exists()) {
                    getBatchWizard().addFileToScan(fn);

                }
            }
            updateButtons();
        }

