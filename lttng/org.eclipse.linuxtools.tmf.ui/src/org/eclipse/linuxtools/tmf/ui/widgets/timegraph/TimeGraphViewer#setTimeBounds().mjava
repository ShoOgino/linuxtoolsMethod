    /**
     * Recalculate the time bounds
     */
    public void setTimeBounds() {
        fTime0Bound = fBeginTime;
        if (fTime0Bound < 0) {
            fTime0Bound = 0;
        }
        fTime1Bound = fEndTime;
        if (!fTimeRangeFixed) {
            fTime0 = fTime0Bound;
            fTime1 = fTime1Bound;
        }
        if (fTime1 - fTime0 < fMinTimeInterval) {
            fTime1 = Math.min(fTime1Bound, fTime0 + fMinTimeInterval);
        }
    }

