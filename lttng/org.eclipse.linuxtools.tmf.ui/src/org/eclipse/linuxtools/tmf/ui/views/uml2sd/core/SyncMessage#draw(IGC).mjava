    /*
     * (non-Javadoc)
     * @see org.eclipse.linuxtools.tmf.ui.views.uml2sd.core.BaseMessage#draw(org.eclipse.linuxtools.tmf.ui.views.uml2sd.drawings.IGC)
     */
    @Override
    public void draw(IGC context) {
        if (!isVisible())
            return;
        // Draw it selected?
        if (!isSelected()) {
            context.setBackground(Frame.getUserPref().getBackGroundColor(fPrefId));
            context.setForeground(Frame.getUserPref().getForeGroundColor(fPrefId));
        }
        super.draw(context);
    }

