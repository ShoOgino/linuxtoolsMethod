        int findItemIndex(ITimeGraphEntry trace) {
            if (trace == null) {
                return -1;
            }

            for (int i = 0; i < fExpandedItems.length; i++) {
                Item item = fExpandedItems[i];
                if (item.fTrace == trace) {
                    return i;
                }
            }

            return -1;
        }

