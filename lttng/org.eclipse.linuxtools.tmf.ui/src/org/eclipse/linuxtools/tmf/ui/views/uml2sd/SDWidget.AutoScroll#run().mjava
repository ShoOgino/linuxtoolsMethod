        /*
         * (non-Javadoc)
         * @see java.util.TimerTask#run()
         */
        @Override
        public void run() {
            Display.getDefault().asyncExec(new Runnable() {
                @Override
                public void run() {
                    if (fSdWidget.isDisposed())
                        return;
                    fSdWidget.fDragX += fDeltaX;
                    fSdWidget.fDragY += fDeltaY;
                    fSdWidget.scrollBy(fDeltaX, fDeltaY);
                }
            });
        }

