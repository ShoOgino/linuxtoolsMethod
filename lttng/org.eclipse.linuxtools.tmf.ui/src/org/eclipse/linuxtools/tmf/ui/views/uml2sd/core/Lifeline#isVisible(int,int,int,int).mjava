    /**
     * Returns the lifeline visibility for the given visible area
     * 
     * @param vx
     * @param vy
     * @param vwidth
     * @param vheight
     * @return true if visible false otherwise
     */
    @Override
    public boolean isVisible(int vx, int vy, int vwidth, int vheight) {
        int x = getX();
        int width = getWidth();
        if (((x >= vx) && (x <= vx + vwidth)) || ((x + width >= vx) && (x <= vx)))
            return true;
        return false;
    }

