    /**
     * Returns the chosen font
     * 
     * @return the font
     */
    @Override
    public IFont getFont(String prefName) {
        if ((fontPref.get(prefName) != null) && (fontPref.get(prefName) instanceof IFont))
            return (IFont) fontPref.get(prefName);
        else
            return FontImpl.getSystemFont();
    }

