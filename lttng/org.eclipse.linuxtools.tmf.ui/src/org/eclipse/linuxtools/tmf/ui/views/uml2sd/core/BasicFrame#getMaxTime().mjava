        if (lastExternalTimePref != SDViewPref.getInstance().excludeExternalTime()) {
            lastExternalTimePref = SDViewPref.getInstance().excludeExternalTime();
            computeMinMax = true;
        }
        if (computeMinMax) {
            computeMinMax();
            computeMinMax = false;
        }
        return maxTime;
    }

