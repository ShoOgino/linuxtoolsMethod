	public void mouseUp(MouseEvent e) {
		if (0 != _dragState) {
			setCapture(false);
			if (1 == _dragState) {
			    // Notify time provider to check the need for listener notification
			    _timeProvider.notifyStartFinishTime();
			} else if (2 == _dragState) {
				if (hitTest(e.x, e.y) == _hitIdx)
					toggle(_hitIdx);
			} else if (3 == _dragState) {
				redraw();
			}
			_dragState = 0;
		}
	}

