    @Override
    public void setNameSpace(int width) {
        _nameWidth = width;
        int w = _stateCtrl.getClientArea().width;
        if (_nameWidth > w - 6) {
            _nameWidth = w - 6;
        }
        if (_nameWidth < 6) {
            _nameWidth = 6;
        }
        _stateCtrl.adjustScrolls();
        _stateCtrl.redraw();
        _timeScaleCtrl.redraw();
    }

