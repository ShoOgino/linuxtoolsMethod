    /**
     * Set the time when the execution occurrence starts.
     *
     * @param time the time when the execution occurrence starts
     * @since 2.0
     */
    public void setStartTime(ITmfTimestamp time) {
        fStartTime = time;
        fHasTimeInfo = true;
        if (getLifeline() != null) {
            getLifeline().setTimeInfo(true);
        }
    }

