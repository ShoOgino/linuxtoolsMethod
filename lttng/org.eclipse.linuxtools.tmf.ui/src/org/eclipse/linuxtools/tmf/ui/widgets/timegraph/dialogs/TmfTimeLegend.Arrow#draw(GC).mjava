		private void draw(GC gc) {
			Rectangle r = getClientArea();
			gc.setForeground(color);

			int y0, y1;
			if (r.height > HEIGHT) {
				y0 = (r.height - HEIGHT) / 2;
				y1 = y0 + HEIGHT;
			} else {
				y0 = 0;
				y1 = r.height;
			}

			gc.drawLine(DX, y0, DX, y1);

			gc.drawLine(0, y0 + 3, DX, y0);
			gc.drawLine(2 * DX, y0 + 3, DX, y0);
		}

