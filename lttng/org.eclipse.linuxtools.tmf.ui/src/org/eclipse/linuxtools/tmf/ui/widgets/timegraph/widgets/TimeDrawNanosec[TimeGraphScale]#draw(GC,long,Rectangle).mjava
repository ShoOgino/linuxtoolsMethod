    @Override
    public void draw(GC gc, long time, Rectangle rect) {
        long ns = time % 1000;
        time /= 1000;
        long mcs = time % 1000;
        time /= 1000;
        long ms = time % 1000;
        time /= 1000;
        Utils.drawText(gc, sep(time) + "." + pad(ms) + " " + pad(mcs) + " " + pad(ns), rect, true); //$NON-NLS-1$ //$NON-NLS-2$ //$NON-NLS-3$
    }

