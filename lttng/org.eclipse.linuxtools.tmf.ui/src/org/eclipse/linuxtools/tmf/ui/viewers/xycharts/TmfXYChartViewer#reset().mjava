    /**
     * Resets the content of the viewer
     */
    public void reset() {
        // Reset the internal data
        setSelectionBeginTime(0);
        setSelectionEndTime(0);
        setStartTime(0);
        setWindowStartTime(0);
        setWindowDuration(0);
        setEndTime(0);
        setWindowEndTime(0);
        setTrace(null);
        clearContent();
    }

