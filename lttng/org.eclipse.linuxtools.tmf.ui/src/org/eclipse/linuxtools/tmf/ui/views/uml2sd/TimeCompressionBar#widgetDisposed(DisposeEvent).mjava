    /*
     * (non-Javadoc)
     * @see org.eclipse.swt.events.DisposeListener#widgetDisposed(org.eclipse.swt.events.DisposeEvent)
     */
    @Override
    public void widgetDisposed(DisposeEvent e) {
        if (fTooltip != null) {
            fTooltip.dispose();
        }
        super.removeDisposeListener(this);
        for (int i = 0; i < fColors.length; i++) {
            fColors[i].dispose();
        }
    }

