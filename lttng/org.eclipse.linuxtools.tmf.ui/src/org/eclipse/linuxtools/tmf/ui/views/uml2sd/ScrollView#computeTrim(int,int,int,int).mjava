    @Override
    public Rectangle computeTrim(int x, int y, int w, int h) {
        Rectangle r = new Rectangle(x, y, w, h);
        int barVis = computeBarVisibility(w, h, false, false);
        if ((barVis & VBAR) != 0) {
            r.width += getVerticalBarWidth();
        }
        if ((barVis & HBAR) != 0) {
            r.height += getHorizontalBarHeight();
        }
        return r;
    }

