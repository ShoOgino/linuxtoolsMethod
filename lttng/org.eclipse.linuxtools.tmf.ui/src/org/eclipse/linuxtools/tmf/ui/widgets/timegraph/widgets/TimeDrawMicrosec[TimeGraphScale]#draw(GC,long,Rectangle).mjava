    @Override
    public void draw(GC gc, long time, Rectangle rect) {
        time /= 1000;
        long mcs = time % 1000;
        time /= 1000;
        long ms = time % 1000;
        time /= 1000;
        Utils.drawText(gc, sep(time) + "." + pad(ms) + " " + pad(mcs), rect, true); //$NON-NLS-1$ //$NON-NLS-2$
    }

