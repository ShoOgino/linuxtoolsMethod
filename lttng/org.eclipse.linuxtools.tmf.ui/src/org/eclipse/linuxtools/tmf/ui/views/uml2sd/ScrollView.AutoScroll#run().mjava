        @Override
        public void run() {
            final Display display = Display.getDefault();
            if ((display == null) || display.isDisposed()) {
                return;
            }
            display.asyncExec(new Runnable() {
                @Override
                public void run() {
                    if (!scrollView.isDisposed()) {
                        scrollView.scrollBy(deltaX, deltaY);
                    }
                }
            });
        }

