	public int expandItem(int idx, boolean expand) {
		if (idx < 0 || idx >= _items.length)
			return 0;
		int ret = 0;
		Item item = (Item) _items[idx];
		if (item._hasChildren && !item._expanded) {
			item._expanded = expand;
			ret = _items.length;
			updateItems();
			ret = _items.length - ret;
		}
		return ret;
	}

