    /*
     * (non-Javadoc)
     * @see org.eclipse.linuxtools.tmf.component.TmfComponent#dispose()
     */
    @Override
    public void dispose() {
       super.dispose();
       ITmfRequest indexRequest = null;
       fLock.lock();
       try {
           IWorkbenchWindow window = PlatformUI.getWorkbench().getActiveWorkbenchWindow();
           // During Eclipse shutdown the active workbench window is null
           if (window != null) {
               window.getSelectionService().removePostSelectionListener(this);
           }

           indexRequest = fIndexRequest;
           fIndexRequest = null;
           cancelOngoingRequests();

           fView.setSDFindProvider(null);
           fView.setSDPagingProvider(null);
           fView.setSDFilterProvider(null);
           fView = null;
       } finally {
           fLock.unlock();
       }
       if (indexRequest != null && !indexRequest.isCompleted()) {
           indexRequest.cancel();
       }
    }

