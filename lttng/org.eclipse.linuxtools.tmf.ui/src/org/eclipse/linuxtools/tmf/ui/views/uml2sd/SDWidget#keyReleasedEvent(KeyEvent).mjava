    @Override
    protected void keyReleasedEvent(KeyEvent event) {
        setFocus(-1);
        if (event.keyCode == SWT.CTRL) {
            fCtrlSelection = false;
        }
        if (event.keyCode == SWT.SHIFT) {
            fShiftSelection = false;
        }
        super.keyReleasedEvent(event);
        setFocus(1);
    }

