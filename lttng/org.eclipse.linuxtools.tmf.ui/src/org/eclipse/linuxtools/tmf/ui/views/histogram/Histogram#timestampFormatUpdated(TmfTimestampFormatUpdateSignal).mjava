    /**
     * Format the timestamp and update the display
     *
     * @param signal
     *            the incoming signal
     * @since 2.0
     */
    @TmfSignalHandler
    public void timestampFormatUpdated(TmfTimestampFormatUpdateSignal signal) {
        if (fDataModel.getNbEvents() == 0) {
            return;
        }

        updateRangeTextControls();

        fComposite.layout();
    }

