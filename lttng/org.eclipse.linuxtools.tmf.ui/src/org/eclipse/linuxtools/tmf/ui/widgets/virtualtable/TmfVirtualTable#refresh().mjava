    public void refresh() {
        boolean done = refreshTable();
        if (fPendingSelection && done) {
            fPendingSelection = false;
            if (fTable.getSelection().length > 0) {
                Event e = new Event();
                e.item = fTable.getSelection()[0];
                fTable.notifyListeners(SWT.Selection, e);
            }
        }
    }

