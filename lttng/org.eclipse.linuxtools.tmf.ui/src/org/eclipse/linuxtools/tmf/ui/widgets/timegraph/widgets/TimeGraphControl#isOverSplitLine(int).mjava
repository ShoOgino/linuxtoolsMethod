        if (x < 0 || null == _timeProvider) {
            return false;
        }
        int w = 4;
        int nameWidth = _timeProvider.getNameSpace();
        if (x > nameWidth - w && x < nameWidth + w) {
            return true;
        } else {
            return false;
        }
    }

