    /**
     *  Validate parsing of mixed kind of comments
     */
    @Test
    public void testMixedComment() {
        tokenize(" // /*\n");
        checkToken(CTFLexer.WS, " ");
        checkToken(CTFLexer.LINE_COMMENT, "// /*\n");

        tokenize(" /*\n//\n*/ ");
        checkToken(CTFLexer.WS, " ");
        checkToken(CTFLexer.COMMENT, "/*\n//\n*/");
        checkToken(CTFLexer.WS, " ");
    }

