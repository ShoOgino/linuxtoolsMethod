    /**
     *  Validate complex nested comments parsing
     */
    @Test
    public void testNestedComment() {
        tokenize(" /* /* */ ");
        checkToken(CTFLexer.WS, " ");
        checkToken(CTFLexer.COMMENT, "/* /* */");
        checkToken(CTFLexer.WS, " ");

        tokenize(" /* /* * ** / */ ");
        checkToken(CTFLexer.WS, " ");
        checkToken(CTFLexer.COMMENT, "/* /* * ** / */");
        checkToken(CTFLexer.WS, " ");
    }

