    /**
     * Closes the log file if open.
     */
    public static void close() {
        if (fTraceLog == null)
            return;

        try {
            fTraceLog.close();
            fTraceLog = null;
        } catch (IOException e) {
            Activator.getDefault().getLog().log(new Status(IStatus.WARNING, Activator.PLUGIN_ID, IStatus.WARNING, 
                    "Can't close log file of the trace control", e)); //$NON-NLS-1$
        }
    }

