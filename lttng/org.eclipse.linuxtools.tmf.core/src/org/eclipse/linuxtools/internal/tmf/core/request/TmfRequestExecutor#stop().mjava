	/**
	 * Stops the executor
	 */
	public synchronized void stop() {
	    if (fCurrentRequest != null) {
	        fCurrentRequest.cancel();
	    }

	    while ((fCurrentRequest = fRequestQueue.poll()) != null) {
	        fCurrentRequest.cancel();
	    }

		fExecutor.shutdown();
		if (Tracer.isComponentTraced())
         {
            Tracer.trace(fExecutor + " terminated"); //$NON-NLS-1$
        }
	}

