     * has seqNumber
     *
     * @param seqNumber
     * @throws IOException
     */
    private void seekFCToNodePos(FileChannel fc, int seqNumber)
            throws IOException {
        fc.position(HistoryTree.TREE_HEADER_SIZE + (long) seqNumber
                * tree.getConfig().getBlockSize());
