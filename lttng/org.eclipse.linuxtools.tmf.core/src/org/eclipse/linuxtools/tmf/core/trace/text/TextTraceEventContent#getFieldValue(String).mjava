    /**
     * Get a subfield value by name
     *
     * @param name
     *            a subfield name
     * @return field value object
     */
    public Object getFieldValue(String name) {
        for (int i = 0; i < fFields.length; i++) {
            if (fFields[i].getName().equals(name)) {
                return fFields[i].getValue();
            }
        }
        return null;
    }

