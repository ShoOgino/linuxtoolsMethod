    /**
     * Return the absolute path of this attribute, as a single slash-separated
     * String.
     * 
     * @return
     */
    String getFullAttributeName() {
        String[] array;
        String ret = ""; //$NON-NLS-1$

        array = this.getFullAttribute();
        for (int i = 0; i < array.length - 1; i++) {
            ret += array[i] + '/';
        }
        ret += array[array.length - 1];
        return ret;
    }

