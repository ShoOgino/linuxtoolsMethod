    /**
     * Set a subfield value by name
     *
     * @param name
     *            a subfield name
     * @param value
     *            the subfield value
     */
    public void setFieldValue(String name, Object value) {
        for (int i = 0; i < fFields.length; i++) {
            if (fFields[i].getName().equals(name)) {
                fFields[i].fValue = value;
            }
        }
    }

