    /**
     * We cannot use List.toArray(T[]) for primitives types, so do it manually.
     */
    private static long[] convertListToArray(List<Long> list) {
        long[] array = new long[list.size()];
        for (int i = 0; i < list.size(); i++) {
            array[i] = list.get(i);
        }
        return array;
    }

