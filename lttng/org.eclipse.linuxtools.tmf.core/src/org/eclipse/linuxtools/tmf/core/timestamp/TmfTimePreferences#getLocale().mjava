    /**
     * Get the locale
     *
     * @return the locale
     * @since 3.2
     */
    public Locale getLocale() {
        return Locale.forLanguageTag(Platform.getPreferencesService().getString(Activator.PLUGIN_ID, ITmfTimePreferencesConstants.LOCALE, Locale.getDefault().toLanguageTag(), null));
    }

