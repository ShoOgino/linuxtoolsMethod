    /* (non-Javadoc)
     * @see org.eclipse.swt.events.SelectionListener#widgetSelected(org.eclipse.swt.events.SelectionEvent)
     */
    public void widgetSelected(SelectionEvent event) {

    	switch (event.detail) {
    		case SWT.ARROW_DOWN:
		        fSlider.setSelection(fSlider.getSelection() + SLIDER_RANGE / 100);
    	    	updateCurentTime();
    			break;
    			
    		case SWT.ARROW_UP:
		        fSlider.setSelection(fSlider.getSelection() - SLIDER_RANGE / 100);
    	    	updateCurentTime();
    			break;
    			
//    		case SWT.DRAG:
//    	    	updateCurentTime();
//    			break;
//    			
//    		case SWT.END:
//		        fSlider.setSelection(SLIDER_RANGE);
//    			break;
//    			
//    		case SWT.HOME:
//		        fSlider.setSelection(0);
//    			break;
    			
    		case SWT.PAGE_DOWN:
		        fSlider.setSelection(fSlider.getSelection() + SLIDER_RANGE / 10);
    	    	updateCurentTime();
    			break;
    			
    		case SWT.PAGE_UP:
		        fSlider.setSelection(fSlider.getSelection() - SLIDER_RANGE / 10);
    			break;

    		// The slider was released - set the current time
    		case SWT.NONE:
    	    	updateCurentTime();
    			break;
    	}
    }

