    /*
     * (non-Javadoc)
     * @see org.eclipse.jface.dialogs.Dialog#okPressed()
     */
    @Override
    protected void okPressed() {
        fPathName = fPath.getText();

        File newDir = new File(fPathName);
        if (!newDir.exists()) {
            try {
                newDir.mkdirs();
            } catch (Exception e) {
                // Should not happen
            }
        }

        super.okPressed();
    }

