	public void keyPressed(KeyEvent e) {
		
		switch (e.keyCode) {
			case SWT.SHIFT:
				isShiftPressed = true;
				break;
			case SWT.ARROW_LEFT:
				moveWindowPosition(BASIC_DISPLACEMENT_FACTOR * -1);
				break;
			case SWT.ARROW_RIGHT:
				moveWindowPosition(BASIC_DISPLACEMENT_FACTOR);
				break;
			default:
				break;
		}
	}

