    /**
     * Constructor
     *
     * @param viewId
     *            The ID of the view
     */
    public XmlViewInfo(String viewId) {
        fViewId = viewId;

        IDialogSettings settings = getPersistentPropertyStore();

        fId = settings.get(XML_VIEW_ID_PROPERTY);
        fFilePath = settings.get(XML_VIEW_FILE_PROPERTY);
    }

