	private int simpleCompare(final TmfTimestamp other) {
		if ((fValue == 0) || (other.fValue == 0)) {
		    return (fValue == other.fValue) ? 0
		            : (fValue < other.fValue) ? -1 : 1;
		}
		if ((fValue > 0) && (other.fValue > 0)) {
		    return (fScale < other.fScale) ? -1 : 1;
		}
		if ((fValue < 0) && (other.fValue < 0)) {
		    return (fScale > other.fScale) ? -1 : 1;
		}
		return (fValue < 0) ? -1 : 1;
	}

