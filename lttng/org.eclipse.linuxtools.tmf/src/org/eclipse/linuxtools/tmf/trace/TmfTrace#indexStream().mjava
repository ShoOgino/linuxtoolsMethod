    public void indexStream() {
    	synchronized (fIndexing) {
    		if (fIndexing) {
    			return;
    		}
    		fIndexing = true;
    	}

    	final IndexingJob job = new IndexingJob("Indexing " + fName);
    	job.schedule();

    	if (fWaitForIndexCompletion) {
    		try {
    			job.join();
    		} catch (InterruptedException e) {
    			// TODO Auto-generated catch block
    			e.printStackTrace();
    		}
    	}
    }

