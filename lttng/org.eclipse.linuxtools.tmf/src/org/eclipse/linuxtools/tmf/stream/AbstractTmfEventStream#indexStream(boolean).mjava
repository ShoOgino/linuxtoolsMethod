     */
    public void indexStream(boolean waitForCompletion) {
    	IndexingJob job = new IndexingJob(fName);
    	job.schedule();
        if (waitForCompletion) {
            try {
				job.join();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
        }
    }

