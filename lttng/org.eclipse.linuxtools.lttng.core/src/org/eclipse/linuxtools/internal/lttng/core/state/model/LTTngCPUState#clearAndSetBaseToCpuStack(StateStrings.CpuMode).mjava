	public void clearAndSetBaseToCpuStack(StateStrings.CpuMode newCpuMode) {
		mode_stack.clear();
		irq_stack.clear();
		softirq_stack.clear();
		trap_stack.clear();

		// Ensure that there is always at least 1 item in the stack
		mode_stack.push(newCpuMode);
		irq_stack.push(-1L);
		softirq_stack.push(-1L);
		trap_stack.push(-1L);
	}

