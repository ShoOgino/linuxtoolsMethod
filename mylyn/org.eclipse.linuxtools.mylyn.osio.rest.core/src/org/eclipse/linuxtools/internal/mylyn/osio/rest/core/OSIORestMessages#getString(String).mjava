        public static String getString(String key) {
                try {
                        return ResourceBundle.getBundle(BUNDLE_NAME).getString(key);
                } catch (MissingResourceException e) {
                        return '!' + key + '!';
                } catch (NullPointerException e) {
                        return '#' + key + '#'; //$NON-NLS-1$ //$NON-NLS-2$
                }
        }

