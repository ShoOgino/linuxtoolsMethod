	private double[] getPieSeriesArray() {
		ISeries series[] = this.chart.getSeriesSet().getSeries();
		double result[] = new double[series.length];

		for (int i=0; i<result.length; i++) {
			double d[] = series[i].getXSeries();
			if (d != null && d.length > 0)
				result[i] = d[0];
			else
				result[i] = 0;
		}

		return result;
	}

