	public ChartViewer( )
	{
		try {
			deviceRenderer = PluginSettings.instance( ).getDevice( "dv.SWT" );
		} catch (ChartException e) {
			Status s = new Status(
					Status.ERROR,
					Activator.PLUGIN_ID,
					Status.ERROR,
					e.getMessage(),
					e);
			Activator.getDefault().getLog().log(s);
		}
		
	}

