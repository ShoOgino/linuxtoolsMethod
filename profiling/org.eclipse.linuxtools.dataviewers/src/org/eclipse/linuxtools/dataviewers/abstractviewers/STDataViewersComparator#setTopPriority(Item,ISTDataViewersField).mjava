    /**
     * Sets the top-level sorter
     *
     * @param column
     * @param field
     */
    public void setTopPriority(final Item column, final ISTDataViewersField field) {
        for (int i = 0; i < columns.length; i++) {
            if (columns[i].equals(column)) {
                setTopPriority(i, field);
                return;
            }
        }
    }

