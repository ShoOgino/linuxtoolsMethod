    /*
     * @see IUpdate#update()
     */
    @Override
	public void update() {
        if (fShell == null) {
            if (fWorkbenchPart != null)
                fTarget = (ISTFindReplaceTarget) fWorkbenchPart.getAdapter(ISTFindReplaceTarget.class);
            else
                fTarget = null;
        }

        if (fTarget != null) {
            fTarget.setFindAction(this);
        }

        setEnabled(fTarget != null && fTarget.canPerformFind());
    }

