        /*
         * @see ShellListener#shellActivated(ShellEvent)
         */
        @Override
		public void shellActivated(ShellEvent e) {
            fActiveShell = (Shell) e.widget;
            updateButtonState();

            if (fGiveFocusToFindField && getShell() == fActiveShell && okToUse(fFindField))
                fFindField.setFocus();

        }

