        /*
         * @see IPartListener#partClosed(IWorkbenchPart)
         */
        public void partClosed(IWorkbenchPart part) {

            if (part == fPreviousPart) {
                fPreviousPart = null;
                fPreviousTarget = null;
            }

            if (part == fPart)
                partActivated(null);
        }

