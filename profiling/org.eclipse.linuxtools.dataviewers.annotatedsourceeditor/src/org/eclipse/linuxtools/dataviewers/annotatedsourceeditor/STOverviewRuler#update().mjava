	/*
	 * @see org.eclipse.jface.text.source.IVerticalRuler#update()
	 */
	@Override
	 public void update() {
		if (fCanvas != null && !fCanvas.isDisposed()) {
			Display d= fCanvas.getDisplay();
			if (d != null) {
				d.asyncExec(new Runnable() {
					public void run() {
						redraw();
						updateHeader();
					}
				});
			}
		}
	}

