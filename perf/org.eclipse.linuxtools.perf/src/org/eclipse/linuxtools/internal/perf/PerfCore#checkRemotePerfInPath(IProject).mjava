	public static boolean checkRemotePerfInPath(IProject project) {
		try
		{
			Process p = RuntimeProcessFactory.getFactory().exec(new String [] {PerfPlugin.PERF_COMMAND, "--version"}, project); //$NON-NLS-1$
			return (p != null);
		}
		catch (IOException e)
		{
			logException(e);
			return false;
		}
	}

