	public void testComplex1() {
		String text =
			"AM_INIT_AUTOMAKE([foo1], 1.96)\n" +
			"while true; do \n" +
			"	var=shift;\n" +
			"	if [ test -f \"$var\"] ; then\n"+
			"		AC_SOMETHING($var);\n"+
			"	fi\n"+
			"done;\n"+
			"AM_GENERATE(Makefile)\n";
		AutoconfElement tree = parse(text, false);
		assertTreeStructure(tree, new String[] { 
				"AM_INIT_AUTOMAKE",
					"foo1",
					"1.96",
				null,
				"while",
					"if",
						"AC_SOMETHING",
							"$var",
						null,
					null,
				null,
				"AM_GENERATE",
					"Makefile",
				null
		});
	}

