	public IAConfiguration getConfiguration(IProject p, String cfgId, boolean persist) {
		IAConfiguration cfg = findCfg(p, cfgId);
		if (cfg == null) {
			cfg = createDefaultConfiguration(p, cfgId);
			if (persist) {
				addConfiguration(p, cfg);
			}
		} else {
			if (!persist) {
				cfg = cfg.copy();
			}
		}
		return cfg;
	}

