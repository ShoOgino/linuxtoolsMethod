	private String completionWord(IDocument doc, int offset)
			throws BadLocationException {
		String word = null;
		for (int n = offset - 1; n >= 0 && word == null; n--) {
			char c = doc.getChar(n);
			if (!Character.isLetterOrDigit(c)) {
				word = doc.get(n + 1, offset - n - 1);
			}
		}
		return word;
	}

