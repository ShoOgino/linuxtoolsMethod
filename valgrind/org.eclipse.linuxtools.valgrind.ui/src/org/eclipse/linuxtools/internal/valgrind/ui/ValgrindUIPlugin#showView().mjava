    /**
     * Shows the Valgrind view in the active page and gives it focus.
     */
    public void showView() {
        Display.getDefault().syncExec(new Runnable() {
            @Override
            public void run() {
                try {
                    activePage.showView(IValgrindToolView.VIEW_ID);
                } catch (PartInitException e) {
                    e.printStackTrace();
                }
            }
        });
    }

