	/**
	 * Displays the unit mask options for the given event
	 * @param oe	the event
	 */
	public void displayEvent(OpEvent oe)
	{
			if (oe.getUnitMask().numMasks() == 0)
			{
				// Shortcut
				_group[RADIO].setVisible(false);
				_group[CHECK].setVisible(false);
				return;
			}
			
			_displayMask(oe.getUnitMask());
	}

