	// handles text verify events for all text boxes	
	private void _handleTextVerify(Text text, VerifyEvent ve)
	{
		if (text != _kernelImageFileText)
		{
				// Only allow numbers
				// SUCK FIXME: i18n?
				try
				{
					int count = Integer.parseInt(ve.text);
					if (count < 0)
						ve.doit = false;
				}
				catch (NumberFormatException e)
				{
					ve.doit = false;
				}			
		}
	}

