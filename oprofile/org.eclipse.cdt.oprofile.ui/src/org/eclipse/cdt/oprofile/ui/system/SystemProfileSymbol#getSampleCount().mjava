	public int getSampleCount()
	{
		// there appears to be a lack of symmetry... Should be
		// a SampleSymbol object with Samples associated with it?
		if (_count < 0)
		{
			_count = 0;
			for (int i = 0; i < _samples.size(); ++i)
				_count += ((Sample) _samples.get(i)).getSampleCount();
		}
		
		return _count;
	}

