        /**
         * Notifies that the Add button has been pressed.
         */
        private void addDirPressed() {
            setPresentsDefaultValue(false);
            String input = getNewDirInputObject();

            if (input != null) {
                int index = list.getSelectionIndex();
                if (index >= 0) {
                    list.add(input, index + 1);
                } else {
                    list.add(input, 0);
                }
                selectionChanged();
            }
        }

