	/*
	 * @see ITextOperationTarget#doOperation(int)
	 */
	@Override
	public void doOperation(int operation) {
		if (getTextWidget() == null)
			return;
		switch (operation) {
		case UNDO:
			ignoreTextConverters = true;
			break;
		case REDO:
			ignoreTextConverters = true;
			break;
		default:
			break;
		}
		super.doOperation(operation);
	}

