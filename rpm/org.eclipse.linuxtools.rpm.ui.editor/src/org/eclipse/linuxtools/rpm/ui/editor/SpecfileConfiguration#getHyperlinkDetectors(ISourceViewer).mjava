	public IHyperlinkDetector[] getHyperlinkDetectors(ISourceViewer sourceViewer) {
		if (sourceViewer == null)
			return null;
		return new IHyperlinkDetector[] { new URLHyperlinkWithMacroDetector(editor.getSpecfile())};
